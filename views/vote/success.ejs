<!-- views/vote-success.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="/css/output.css" rel="stylesheet">
  <link href="/css/custom.css" rel="stylesheet"> <!-- Custom styles -->
  <link rel="stylesheet" href="/css/fontawesome-pro/css/all.min.css">
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
  <div class="bg-white p-8 rounded-lg shadow-lg text-center">
    <div class="text-6xl text-green-500 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 13l4 4L19 7" />
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= message %></h1>
    <p class="text-gray-600 mb-6">Your vote has been recorded successfully.</p>
    <a href="/student/dashboard" class="inline-block px-6 py-3 text-white bg-green-500 hover:bg-green-600 rounded-lg text-lg font-semibold">Return to Homepage</a>
  </div>


   <!-- JavaScript for redirection -->
   <script>
    // Redirect after 5 seconds
    setTimeout(function() {
      window.location.href = '/student/dashboard';
    }, 5000); // 5000 milliseconds = 5 seconds
  </script>
</body>
</html>
